extends home.pug
block content 
        h1 our suggestions
        br 
        section.old
            h1 old version
            p our old version is still up to date
            a(href='/home') to the old version
            br 
            br 
        each i in produkt
            div.preview 
                a(href='/new/buy/'+ i._id) browse and buy
                    p=i.name
                    p=i.price 
                        strong $
                    if i.discount > 0
                        div#discount
                            p 
                            span -
                            strong=i.discount
                                span %
                            br
                            span ONLY
                            br 
                            span=i.price - (i.price * i.discount)/100
                                span $
                    img(src=i.image, alt="") 
            br
            br
        div.page 
            each i in pg 
                a(href='/listing?page=' + i)
                    span=i
        br 
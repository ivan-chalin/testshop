extends home.pug 
block content
    h1 tova e living room
    br
    br
    each i in data
            div.preview
                a(href='/new/buy/' +i._id) browse and buy 
                    p=i.name
                    p=i.price
                        span $ 
                    p=i.kind
                    if i.discount > 0
                        div#discount
                            p 
                            span -
                            strong=i.discount
                                span %
                            br
                            span ONLY
                            br 
                            span=i.price - (i.price * i.discount)/100
                                span $
                    img(src=i.image, alt="") 
            br 
    div.simple-page 
        if prevpage > 0
            a(href='/new/livingroom?page='+prevpage) << prev 
        if data.length == 2
            a(href='/new/livingroom?page='+nextpage) next >> 
    br
    br
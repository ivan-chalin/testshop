extends home.pug
block content
    h1 discount  
        if kind
            strong=kind
        if !kind
            strong=data[0].kind
    each i in data
            div.preview
                a(href='/new/buy/' +i._id) browse and buy 
                    p=i.name
                    p=i.price
                        span $ 
                    p=i.kind
                    img(src=i.image, alt="")
                    p=i.discount
            br